{% extends 'MusicMBundle::layout.html.twig' %}
{# This must be intelligently generated #}
{% block body %}
    <h1> <strong> Trending Tracks </strong> </h1>
    {% for Track in Tracks %}
        <article class="Track">
            <div class="date"><time datetime="{{ Track.created|date('c') }}">{{ Track.created|date('l, F j, Y') }}</time></div>
            <header>
                <h2><a href="{{ path('MusicMBundle_Track_show', { 'id': Track.id }) }}">{{ Track.name }}</a>, a {{Track.instrument}} track by <a href="{{ path('MusicMBundle_Profile_show', { 'slug': Track.creator }) }}">{{Track.creator}}</a></h2>
                Reputation: {{Track.reputation}}
            </header>
            
            <hr>
